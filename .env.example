# Environment Variables for PaperAgent

# Database Configuration
DATABASE_URL=postgresql://paperagent:paperagent_password@localhost:5432/paperagent

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# LLM Configuration
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Ollama (Local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# Default LLM Provider (openai, anthropic, ollama)
DEFAULT_LLM_PROVIDER=ollama

# Literature Collection
# Google Scholar Proxy (Optional, for anti-scraping)
USE_PROXY=false
PROXY_URL=

# arXiv Configuration
ARXIV_MAX_RESULTS=50

# Application Settings
APP_NAME=PaperAgent
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# File Storage
DATA_DIR=./data
PAPERS_DIR=./data/papers
EXPERIMENTS_DIR=./data/experiments
LITERATURE_DIR=./data/literature
OUTPUTS_DIR=./data/outputs

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Task Queue
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Journal Templates
JOURNAL_TEMPLATES_DIR=./paperagent/templates/journals

# Maximum concurrent tasks
MAX_CONCURRENT_TASKS=5

# Session timeout (seconds)
SESSION_TIMEOUT=3600

# Language Model Settings
MAX_TOKENS=4096
TEMPERATURE=0.7
TOP_P=0.9
